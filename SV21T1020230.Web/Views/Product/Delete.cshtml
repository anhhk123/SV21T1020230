
@model Product
@{
    ViewBag.Title = "Xóa sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-danger">
    <div class="box box-body">
        <form action="~/Product/Delete/@Model.ProductId" method="post">

            <div class="form-group">
                <label>Tên sản phẩm</label>
                <p class="form-control-static">@Model.ProductName</p>
            </div>
            <div class="form-group">
                <label>Chi tiết sản phẩm</label>
                <p class="form-control-static">@Model.ProductDescription</p>

            </div>
            <div class="form-group">
                <label>Đơn vị tính</label>
                <p class="form-control-static">@Model.Unit</p>

            </div>
            <div class="form-group">
                <label>Giá bán</label>
                <p class="form-control-static">@Model.Price</p>

            </div>
            <div class="form-group">
                <label>Trạng thái</label>
                @if (Model.IsSelling)
                {
                    <p class="form-control-static">Đang bán</p>

                }
                else
                {
                    <p class="form-control-static">Ngừng bán</p>

                }
            </div>

            <div class="form-group text-right">
                @if (ViewBag.AllowDelete)
                {
                    
                    <span style="color: red">Không được phép xóa mặt hàng này </span>
                }
                else
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i>
                        Xóa dữ liệu
                    </button>
                }
                <a href="~/Product" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
