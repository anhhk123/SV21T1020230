@model ProductPhoto
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Product/SavePhoto" enctype="multipart/form-data" method="post">
            <input type="hidden" value="@Model.PhotoId" name="@nameof(Model.PhotoId)" />
            <input type="hidden" value="@Model.ProductId" name="@nameof(Model.ProductId)" />

            <div class="form-group">
                <label class="control-label col-sm-2">Chọn file ảnh:</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="@nameof(Model.Photo)" value="@Model.Photo" />
                    <img id="Photo" src="~/images/product/@Model.Photo" class="img img-bordered" style="width:200px" />
                    @Html.ValidationMessage(nameof(Model.Photo))
                </div>
                
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="@nameof(Model.Description)" value="@Model.Description" />
                    @Html.ValidationMessage(nameof(Model.Description))
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="@nameof(Model.DisplayOrder)" value="@Model.DisplayOrder" />
                    @Html.ValidationMessage(nameof(Model.DisplayOrder))
                </div>
            </div>
            <div class="form-group">
                @* <label>Trạng thái</label> *@
                <div class="col-lg-offset-2 col-sm-10">
                    <select class="form-control" name="@nameof(Model.IsHidden)">
                        @if (Model.IsHidden)
                        {
                            <option value="true" selected>Hiển thị ảnh</option>
                            <option value="false">Không hiển thị ảnh</option>
                        }
                        else
                        {
                            <option value="true">Hiển thị ảnh</option>
                            <option value="false" selected>Không hiển thị ảnh</option>
                        }

                    </select>
                </div>
            </div>
