@model ProductSearchResult
@{
    ViewBag.Title = "Danh sách sản phẩm";

}






<div class="box box-primary">
    <div class="box-body">
        <!--Form nhập đầu vào tìm kiếm-->
        <form id="formSearch" action="/Product" method="get">
            <div class="row">
                <div class="col-sm-3">
                    <label>Loại hàng:</label>
                    <select class="form-control" name="CategoryID">
                        <option value="">-- Chọn loại hàng --</option>
                        @{
                            foreach (var item in CommonDataService.ListAllCategories())
                            {
                                <option value="@item.CategoryId">@item.CategoryName</option>
                            }
                        }
                        
                    </select>
                </div>
                <div class="col-sm-3">
                    <label>Nhà cung cấp:</label>
                    <select class="form-control" name="SupplierID">
                        <option value="">-- Chọn nhà cung cấp --</option>
                        @{
                            foreach(var item in CommonDataService.ListOfSuppliers())
                            {
                                <option value="@item.SupplierID">@item.SupplierName</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-sm-1">
                    <label>Giá từ:</label>
                    <input type="text" class="form-control" name="MinPrice" value="0">
                </div>
                <div class="col-sm-1">
                    <label>đến:</label>
                    <input type="text" class="form-control" name="MaxPrice" value="0">
                </div>
                <div class="col-sm-4">
                    <label>Tên mặt hàng cần tìm:</label>
                    <div class="input-group">
                        <input name="SearchValue" type="text" class="form-control" placeholder="Nhập mặt hàng hàng cần tìm" autofocus="">
                        <div class="input-group-btn">
                            <button class="btn btn-info" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                            <a href="/Product/Create" class="btn btn-primary" style="margin-left:5px">
                                <i class="fa fa-plus"></i> Bổ sung
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <!--Hiển thị dữ liệu-->
        <p>Có <strong>@Model.RowCount</strong> mặt hàng trong tổng số <strong>@Model.PageCount</strong> trang</p>
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th style="width:100px">Ảnh</th>
                        <th style="width:auto">Tên mặt hàng</th>
                        <th style="width:150px">Đơn vị tính </th>
                        <th style="width:150px">Giá</th>
                        <th style="width:80px"></th>
                    </tr>
                </thead>
                <tbody>
                        @{
                            foreach (var item in Model.data)
                            {
                                <tr>
                                    <td>
                                    <img src="~/Images/Product/@item.Photo" style="width:50px" />
                                    </td>
                                    <td>@item.ProductName</td>
                                    <td>@item.Unit</td>
                                    <td>@item.Price</td>
                                    <td class="text-right">
                                        <a href="~/Product/Edit/@item.ProductId" class="btn btn-xs btn-info">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                    <a href="~/Product/Delete/@item.ProductId" class="btn btn-xs btn-danger">
                                            <i class="fa fa-remove"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                </tbody>
            </table>
        </div>
        <div class="text-center">
            <ul class="pagination">
                @{
                    for(int i =1; i <= Model.PageCount; i++)
                    {
                        if(i == Model.Page)
                        {
                            <li class="active"><a href="#">@i</a></li>
                        }
                        else
                        {
                            <li><a href="~/Product?page=@i&searchValue=@Model.SearchValue">@i</a></li>

                        }

                    }
                }
            </ul>
        </div>
    </div>
</div>