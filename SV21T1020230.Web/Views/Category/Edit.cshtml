
@model Category
@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-primary">
    <div class="box box-body">
        <form action="~/Category/Save" method="post">
            <input type="hidden" value="@Model.CategoryId" name="@nameof(Model.CategoryId)" />
            <div class="form-group">
                <label>Tên danh mục</label>
                <input type="text" class="form-control" autofocus name="@nameof(Model.CategoryName)" value="@Model.CategoryName">
                @Html.ValidationMessage(nameof(Model.CategoryName))
            </div>
            <div class="form-group">
                <label>Chi tiết</label>
                <input type="text" class="form-control" name="@nameof(Model.Description)" value="@Model.Description">
            </div>
            
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-0"></i>
                    Lưu giữ liệu
                </button>
                <a href="~/Customer" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
