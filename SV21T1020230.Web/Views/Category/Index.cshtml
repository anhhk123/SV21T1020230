@model IEnumerable<SV21T1020230.DomainModels.Category>

@{
    ViewBag.Title = "Quản lý danh sách danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="box box-primary">
    <div class="box-body">
        <!--Form nhập đầu vào tìm kiếm-->
        <form id="formSearch" action="~/Categories/Index" method="post">
            <div class="input-group">
                <input name="searchValue"
                       type="text"
                       class="form-control"
                       placeholder="Nhập tên khách hàng cần tìm"
                       autofocus />
                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/Category/Create" class="btn btn-primary" style="margin-left:5px">
                        <i class="fa fa-plus"></i>Bổ sung
                    </a>
                </div>
            </div>


        </form>
        @{
            if(ViewBag.ErrorMessageIndex != null){
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessageIndex
                </div>
            }
        }
        <!--Hiển thị dữ liệu-->
        <p>Có <strong>100</strong> khách hàng trong tổng số <strong>10</strong> trang</p>
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th>Tên danh mục</th>
                        <th>Chi tiết</th>
                        <th></th>
                        <th style="width:80px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td class="text-right">
                                <a href="~/Category/Edit/123" class="btn btn-xs btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Category/Delete/123" class="btn btn-xs btn-danger">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="text-center">
            <ul class="pagination">
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
            </ul>
        </div>
    </div>
</div>
