@model Customer
@{

}
<div class="box box-primary">
    <div class="box box-body">
        <form action="~/Customer/Save" method="post">
            <input type="hidden" name="@nameof(Model.CustomerId)" value="@Model.CustomerId"
            <div class="form-group">
                <label >Tên khách hàng</label>
                <input type="text" class="form-control" name="@nameof(Model.CustomerName)" value="@Model.CustomerName" autofocus>
                @Html.ValidationMessage(nameof(Model.CustomerName))
            </div>
            <div class="form-group">
                <label>Tên giao dịch</label>
                <input type="text" class="form-control" name="@nameof(Model.ContactName)" value="@Model.ContactName" class="form-control">
                @Html.ValidationMessage(nameof(Model.ContactName))

            </div>
            <div class="form-group">
                <label>Điện thoại</label>
                <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone" class="form-control">
                @Html.ValidationMessage(nameof(Model.Phone))

            </div>
            <div class="form-group">
                <label>Email :</label>
                <input type="text" class="form-control" name="@nameof(Model.Email)" value="@Model.Email" class="form-control">
                @Html.ValidationMessage(nameof(Model.Email))
            </div>
            <div class="form-group">
                <label>Địa chỉ</label>
                <input type="text" class="form-control" name="@nameof(Model.Address)" value="@Model.Address" class="form-control">
                @Html.ValidationMessage(nameof(Model.Address))
            </div>
            <div class="form-group">
                <label>Tỉnh thành</label>
                <select class="form-control select2" name="@nameof(Model.Province)">
                    <option value="">-- Chọn tỉnh thành</option>
                    @foreach (var item in CommonDataService.ListOfProvinces())
                    {
                        if(Model.Province == item.ProvinceName)
                        {
                            <option value="@item.ProvinceName" selected >@item.ProvinceName</option>
                        }else{
                            <option value="@item.ProvinceName" >@item.ProvinceName</option>

                        }
                    }
                </select>
                @Html.ValidationMessageFor( m => m.Province)
            </div>
            <div class="form-group">
                <label>Trạng thái</label>
                <select class="form-control" name="@nameof(Model.IsLocked)">
                    @if (Model.IsLocked)
                    {
                        <option value="false">Khách hàng không bị khoá</option>
                        <option value="true" selected>Khách hàng  bị khoá</option>
                    }
                    else

                    {
                        <option value="false" selected>Khách hàng không bị khoá</option>
                        <option value="true" >Khách hàng  bị khoá</option>
                    }

                </select>
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-0"></i>
                    Lưu giữ liệu
                </button>
                <a href="~/Customer"  class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
        @{
            var check = ViewBag.Error as string;
            if (!string.IsNullOrEmpty(check))
            {
                <div class="alert alert-danger" role="alert">
                    @check
                </div>
            }
        }
    </div>
</div>
