@model Customer
@{

}
<div class="box box-primary">
    <div class="box box-body">
        <form action="~/Customer/Save" method="post">
            <input type="hidden" name="@nameof(Model.CustomerId)" value="@Model.CustomerId"
            <div class="form-group">
                <label >Tên khách hàng</label>
                <input type="text" class="form-control" name="@nameof(Model.CustomerName)" value="@Model.CustomerName" autofocus>
            </div>
            <div class="form-group">
                <label>Tên giao dịch</label>
                <input type="text" name="@nameof(Model.ContactName)" value="@Model.ContactName" class="form-control">
            </div>
            <div class="form-group">
                <label>Điện thoại</label>
                <input type="text" name="@nameof(Model.Phone)" value="@Model.Phone" class="form-control">
            </div>
            <div class="form-group">
                <label>Email :</label>
                <input type="text" name="@nameof(Model.Email)" value="@Model.Email" class="form-control">
            </div>
            <div class="form-group">
                <label>Địa chỉ</label>
                <input type="text" name="@nameof(Model.Address)" value="@Model.Address" class="form-control">
            </div>
            <div class="form-group">
                <label>Tỉnh thành</label>
                <select class="form-control select2" name="@nameof(Model.Province)">
                    <option value="">-- Chọn tỉnh thành</option>
                    @foreach (var item in CommonDataService.ListOfProvinces())
                    {
                        if(Model.Province == item.ProvinceName)
                        {
                            <option value="@item.ProvinceName" selected >@item.ProvinceName</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label>Trạng thái</label>
                @if (Model.IsLocked)
                {
                    <input type="checkbox" value="true" checked />
                }
                else
                {
                    <input type="checkbox" value="true"  />

                }
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-0"></i>
                    Lưu giữ liệu
                </button>
                <a href="~/Customer"  class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
