

@{
    ViewBag.Title = "Xóa nhân viên";
}
@model Employee
<div class="box box-danger">
    <div class="box box-body">
        <form action="~/Employee/Delete/@Model.EmployeeID" method="post">
            <input type="hidden" name="@nameof(Model.EmployeeID)" value="@Model.EmployeeID" />
            <div class="form-group">
                <label>Tên nhân viên</label>
                <p class="form-control-static">@Model.FullName</p>
            </div>
            <div class="form-group">
                <label>Ngày sinh</label>
                <p class="form-control-static">@Model.BirthDate</p>

            </div><div class="form-group">
                <label>Địa chỉ</label>
                <p class="form-control-static">@Model.Address</p>
            </div>
            <div class="form-group">
                <label>Số điện thoại</label>
                <p class="form-control-static">@Model.Phone</p>

            </div>
            <div class="form-group">
                <label>Email</label>
                <p class="form-control-static">@Model.Email</p>

            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Trạng thái:</label>
                <div class="col-sm-10">
                    @if (Model.IsWorking)
                    {
                        <p>Nhân viên đang làm việc</p>
                    }
                    else
                    {
                        <p>Nhân viên đã nghỉ</p>
                    }
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh cá nhân:</label>
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="@Model.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>

            <div class="form-group text-right">
                <div class="col-lg-offset-2 col-sm-10">
                    @if (ViewBag.AllowDelete)
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash-o"></i>
                            Xoá nhân viên
                        </button>
                    }
                    else
                    {
                        <span style="color:red"> Không được phép xoá nhân viên này </span>
                    }
                    <a href="~/Employee" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
