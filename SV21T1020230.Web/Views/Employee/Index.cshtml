
@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Danh sách nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="box box-primary">
    <div class="box-body">
        <!--Form nhập đầu vào tìm kiếm-->
        <form id="formSearch" action="~/Employee" method="get">
            <div class="input-group">
                <input name="searchValue"
                       type="text"
                       class="form-control"
                       placeholder="Nhập tên nhân viên cần tìm"
                       autofocus />
                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/Employee/Create" class="btn btn-primary" style="margin-left:5px">
                        <i class="fa fa-plus"></i>Bổ sung
                    </a>
                </div>
            </div>


        </form>
<p style="margin-top:10px">
            Có <strong>@ViewBag.RowCount</strong> nhân viên trong tổng số <strong>@ViewBag.PageCount</strong> trang
</p>
<div class="row">

    @{
        foreach(var item in Model)
        {
            <!-- Thông tin nhân viên -->
            <div class="col-sm-4">
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">@item.FullName</h3>
                        <div class="box-tools pull-right">
                            <a class="btn btn-box-tool" href="~/Employee/Edit/@item.EmployeeID">
                                <i class="fa fa-edit text-primary"></i>
                            </a>
                                    <a class="btn btn-box-tool" href="~/Employee/Delete/@item.EmployeeID">
                                <i class="fa fa-trash text-danger"></i>
                            </a>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-sm-4">
                                <img class="profile-user-img img-responsive img-bordered" src="~/themes/dist/img/user4-128x128.jpg">
                            </div>
                            <div class="col-sm-8">
                                <ul class="list-group list-group-unbordered">
                                    <li class="list-group-item">
                                        <i class="fa fa-birthday-cake"></i> @item.BirthDate
                                    </li>
                                    <li class="list-group-item">
                                        <i class="fa fa-phone"></i> @item.Phone
                                    </li>
                                    <li class="list-group-item">
                                        <i class="fa fa-envelope"></i> @item.Email
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--/Thông tin nhân viên-->
        }
    }
    
</div>
<div class="text-center">
    <ul class="pagination">
                @for (int p = 1; p <= ViewBag.PageCount; p++)
                {
                    if (p == ViewBag.page)
                    {
                        <li class="page-item active"><a class="page-link" href="~/Employee?page=@p&searchValue=@ViewBag.SearchValue"> @p </a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" href="~/Employee?page=@p&searchValue=@ViewBag.SearchValue"> @p </a></li>
                    }
                }
    </ul>
        </div>
    </div>
</div>

