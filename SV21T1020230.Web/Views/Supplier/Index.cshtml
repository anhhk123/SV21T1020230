
@model IEnumerable<Supplier>
@{
    ViewBag.Title = "Danh sách nhà cung cấp";

    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="box box-primary">
    <div class="box-body">
        <!--Form nhập đầu vào tìm kiếm-->
        <form id="formSearch" action="~/Supplier" method="get">
            <div class="input-group">
                <input name="searchValue"
                       type="text"
                       class="form-control"
                       placeholder="Nhập tên nhà cung cấp cần tìm"
                       autofocus />
                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/Supplier/Create" class="btn btn-primary" style="margin-left:5px">
                        <i class="fa fa-plus"></i>Bổ sung
                    </a>
                </div>
            </div>


        </form>
        <!--Hiển thị dữ liệu-->
        <p>Có <strong>@ViewBag.RowCount</strong> nhà cung cấp trong tổng số <strong>@ViewBag.PageCount</strong> trang</p>
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th>Tên nhà cung cấp</th>
                        <th>Tên liên hệ</th>
                        <th>Tỉnh thành</th>
                        <th>Địa chỉ</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th style="width:80px"></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SupplierName</td>
                                <td>@item.ContactName</td>
                                <td>@item.Province</td>
                                <td>@item.Address</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td> </td>
                                <td class="text-right">
                                    <a href="~/Supplier/Edit/@item.SupplierID" class="btn btn-xs btn-info">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="~/Supplier/Delete/@item.SupplierID" class="btn btn-xs btn-danger">
                                        <i class="fa fa-remove"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }



                </tbody>
            </table>
        </div>
        <div class="text-center">
            <ul class="pagination">
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
            </ul>
        </div>
    </div>
</div>

