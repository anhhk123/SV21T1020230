@{
    ViewBag.Title = "Xóa người giao hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-danger">
    <div class="box box-body">
        <form action="~/Shipper/Delete" method="post">
            <div class="form-group">
                <label>Tên người giao hàng</label>
                <p class="form-control-static">Shipper A</p>
            </div>
            <div class="form-group">
                <label>Số điện thoại</label>
                <p class="form-control-static">0336238660</p>

            </div>


            <div class="form-group text-right">
                <button type="submit" class="btn btn-danger">
                    <i class="fa fa-trash"></i>
                    Xóa dữ liệu
                </button>
                <a href="~/Shipper" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
