
@model IEnumerable<Shipper>
@{
    ViewBag.Title = "Quản lý danh sách người giao hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="box box-primary">
    <div class="box-body">
        <!--Form nhập đầu vào tìm kiếm-->
        <form id="formSearch" action="~/Shipper" method="get">
            <div class="input-group">

                <input name="searchValue"
                       type="text"
                       class="form-control"
                       placeholder="Nhập tên đơn vị giao hàng cần tìm"
                       value="@ViewBag.SearchValue"
                       autofocus />

                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/Shipper/Create/" class="btn btn-primary" style="margin-left:5px">
                        <i class="fa fa-plus"></i> Bổ sung
                    </a>
                </div>

            </div>
        </form>
       
        <!--Hiển thị dữ liệu-->
        <p>Có <strong>100</strong> khách hàng trong tổng số <strong>10</strong> trang</p>
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th>Tên người giao hàng</th>
                        <th>Số điện thoại</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            
                            <td>
                                @item.ShipperName
                            </td>
                            <td>
                                @item.Phone
                            </td>
                            <td class="text-right">
                                <a href="~/Shipper/Edit/@item.ShipperID" class="btn btn-xs btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Shipper/Delete/@item.ShipperID" class="btn btn-xs btn-danger">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="text-center">
            <ul class="pagination">
                @for (int p = 1; p <= ViewBag.PageCount; p++)
                {
                    if (p == ViewBag.page)
                    {
                        <li class="page-item active"><a class="page-link" href="~/Shipper?page=@p&searchValue=@ViewBag.SearchValue"> @p </a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" href="~/Shipper?page=@p&searchValue=@ViewBag.SearchValue"> @p </a></li>
                    }
                }
            </ul>
        </div>
    </div>
</div>
</table>
