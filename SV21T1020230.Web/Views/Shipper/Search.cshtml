@model ShipperSearchResult
@{
    Layout = null;
}
<p>Có <strong>@Model.RowCount</strong> giao hàng trong tổng số <strong>@Model.PageCount</strong> trang</p>
<div>
    <table class="table table-bordered table-hover table-striped ">
        <thead>
            <tr class="bg-primary">

                <th>
                    Tên giao hàng
                </th>
                <th>
                    Điện thoại
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var shipper in Model.data)
            {
                <tr>

                    <td>@shipper.ShipperName</td>
                    <td>@shipper.Phone</td>

                    <td class="text-right">
                        <a href="~/Shipper/Edit/@shipper.ShipperID " class="btn btn-xs btn-info">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Shipper/Delete/@shipper.ShipperID " class="btn btn-xs btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

    @if (Model.PageCount > 1)
    {
        <div class="text-center">
            <ul class="pagination">
                @for (int p = 1; p <= Model.PageCount; p++)
                {
                    if (p == Model.Page)
                    {
                        <li class="active"><a href="#">@p</a></li>
                    }
                    else
                    {
                        <li><a href="javascript:;" onclick="paginationSearch('#formSearch',@p)">@p</a></li>
                    }
                }
            </ul>
        </div>
    }
</div>
